<view class="goods"><scroll-view class="menu-wrapper" id="menuWarpper" scroll-y="true" scroll-with-animation="true" scroll-top="{{scrollTop}}"><block wx:for="{{goods}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['foodTo',[index]]]]]}}" class="{{['menu-item',(currentIndex===index)?'current':'']}}" bindtap="__e"><text class="text border-1px"><text hidden="{{!(item.type>0)}}" class="{{['icon',classMap[item.type]]}}"></text>{{''+item.name+''}}</text></view></block></scroll-view><scroll-view class="foods-wrapper" id="foodsWrapper" scroll-into-view="{{foodView}}" scroll-y="true" scroll-with-animation="true" scroll-top="{{foodTop}}" data-event-opts="{{[['scroll',[['foodScroll',['$event']]]]]}}" bindscroll="__e"><block wx:for="{{goods}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="food-list" id="foodList"><text class="title" id="{{'food'+index}}">{{item.name}}</text><block wx:for="{{item.foods}}" wx:for-item="food" wx:for-index="index" wx:key="index"><view class="food-item border-1px"><view class="icon"><image src="{{food.icon}}" mode="widthFix"></image></view><view class="content"><text class="name">{{food.name}}</text><text class="description">{{food.description}}</text><view class="extra"><text class="count">{{"月售"+food.sellCount+"份"}}</text><text>{{"好评率"+food.rating+"%"}}</text></view><view class="price"><text class="now">{{"￥"+food.price}}</text><text hidden="{{!(food.oldPrice)}}" class="old">{{"￥"+food.oldPrice}}</text></view><view class="cartcontrol-wrapper">购物车控件</view></view></view></block></view></block></scroll-view></view>