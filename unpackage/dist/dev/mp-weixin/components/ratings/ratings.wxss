	-webkit-flex: 0 0 240rpx;
	        flex: 0 0 240rpx;
	padding: 12rpx 0;
	/* width: 348rpx; */
	width: 240rpx;
	border-right: 2rpx solid rgba(7, 17, 27, 0.1);
	text-align: center;
}

